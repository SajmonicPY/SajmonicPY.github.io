<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>PasteLab - New</title>
  <link rel="stylesheet" href="/styles-new.css">
  <link rel="icon" type="type="image/png" href="https://i.ibb.co/YLqP3wH/image-removebg-preview.png"/>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/autosize.js/6.0.1/autosize.min.js" integrity="sha512-OjjaC+tijryqhyPqy7jWSPCRj7fcosu1zreTX1k+OWSwu6uSqLLQ2kxaqL9UpR7xFaPsCwhMf1bQABw2rCxMbg==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
</head>
<body>
  <div class="container">
    <form action='/save' method='POST'>
      <div class="input-container">
        <input class="optionalinput" type="text" name="customId" id="customId" placeholder="Custom Title (optional):" value="<%= locals.customId %>">
      </div>
      <textarea autofocus name="value" id="value"><%= locals.value %></textarea>
      <button class="button" type="submit">Share</button>
    </form>
  </div>
  <script>
    const customIdInput = document.querySelector('#customId');
    customIdInput.addEventListener('focus', function() {
      customIdInput.placeholder = '';
      customIdInput.parentElement.querySelector('label').style.display = 'none';
    });
    customIdInput.addEventListener('blur', function() {
      customIdInput.placeholder = 'Custom Title (optional):';
      if (!customIdInput.value) {
        customIdInput.parentElement.querySelector('label').style.display = 'block';
      }
    });
    autosize(document.querySelector('textarea'));
  </script>
</body>
</html>
